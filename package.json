{
  "name": "@maneko/eslint",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@10.18.3",
  "description": "Shared ESLint config for our projects",
  "author": "Maneko <contact@maneko.moe>",
  "license": "MIT",
  "homepage": "https://github.com/maneko-org/eslint",
  "repository": {
    "url": "https://github.com/maneko-org/eslint"
  },
  "bugs": {
    "url": "https://github.com/maneko-org/eslint/issues"
  },
  "keywords": [
    "eslint",
    "react",
    "next",
    "typescript",
    "node"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "scripts": {
    "format": "prettier --write \"*.js\"",
    "lint": "eslint . --fix",
    "lint-inspector": "npx @eslint/config-inspector",
    "prepare": "husky"
  },
  "dependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@eslint-react/eslint-plugin": "^2.2.2",
    "@next/eslint-plugin-next": "^15.5.5",
    "eslint": "^9.37.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
